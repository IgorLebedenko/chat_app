<li class="message">
  <span class="user-name"><%= message.user.name %></span>
  <span class="timestamp"><%= time_ago_in_words(message.created_at) %></span>
  <% unless params[:edited_message].present? %>
    <span class="delete"><%= link_to image_tag("bin.png", size: "12"), message_path(message_id: message.id),
                                     method: :delete %></span>
    <% if current_user?(message.user) %>
      <span class="edit">
        <%= link_to image_tag("pencil.png", size: "12"), chat_path(edited_message: message.id,
                                                                   message_content: message.content,
                                                                   user_id: message.user_id) %>
      </span>
    <% end %>
  <% end %>
  <span class="content"><%= message.content %></span>
</li>