<% provide(:title, 'Edit chat') %>
<h1>Update your chat</h1>

<div class=row">
  <div class="span6 offset3">
    <%= form_for(@chat) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <%= f.label :name %>
        <%= f.text_field :name %>

        <%= f.label :private %>
        <%= f.select :private, [true, false] %>

        <%= f.submit "Save", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>